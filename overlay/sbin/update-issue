#!/bin/bash

. /etc/os-release
cat > /etc/issue << "BANNER"
  __  __                 _        ___  ____
 |  \/  | __ _  ___ _   _| | __ _ / _ \/ ___|
 | |\/| |/ _` |/ __| | | | |/ _` | | | \___ \
 | |  | | (_| | (__| |_| | | (_| | |_| |___) |
 |_|  |_|\__,_|\___|\__,_|_|\__,_|\___/|____/

BANNER

cat >> /etc/issue << EOF
$PRETTY_NAME
Kernel \r on an \m (\l)

================================================================================
NIC              State          Address
$(ip -br addr show | grep -E -v '^(lo|flannel|cni|veth)')
================================================================================
EOF
cat >> /etc/issue << "EOF"

Welcome to MaculaOS (login with user: macula)
EOF
